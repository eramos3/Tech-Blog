<article class="post">
    <div class="title">
        <a href="/post/{{id}}">{{title}}</a>
        <span>(by {{user.username}} on {{format_date created_at}})</span>
        <p>{{post_desc}}</p>
    </div>
    <div class="meta">
        |
        {{comments.length}} {{format_plural "comment" comments.length}}
    </div>
</article>